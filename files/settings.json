// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `zed: Open Default Settings` command
// from the command palette
{
  "terminal": {
    "dock": "right"
  },

  "features": {
    "inline_completion_provider": "none"
  },
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "autosave": "on_focus_change",
  "theme": {
    "mode": "system",
    "light": "One Dark",
    "dark": "One Dark"
  },

  "experimental.theme_overrides": {
    "background.appearance": "transparent",
    "background": "#4c464290",
    "editor.background": "#00000090",
    "editor.gutter.background": "#00000090",
    "tab_bar.background": "#00000090",
    "terminal.background": "#00000090",
    "toolbar.background": "#00000090",
    "tab.active_background": "#28282820",
    "tab.inactive_background": "#00000000",
    "status_bar.background": "#00000090",
    "title_bar.background": "#00000030",
    "panel.background": "#00000090",
    "border.variant": "#00000000",
    "scrollbar.track.border": "#00000000",
    "editor.active_line.background": "#00000000"
  }
}
